    <!-- Letter Notes -->
    <string name="note_alpha">Pronounced as \'a\' in \'father\'.</string>
    <string name="note_beta">Pronounced as \'b\' in \'boy\';\nlater softened to \'v\' in modern Greek.</string>
    <string name="note_gamma">Pronounced as \'g\' in \'got\'.\nBefore γ, κ, χ, or ξ, pronounced as \'ng\' (as in \'sing\').</string>
    <string name="note_delta">Pronounced as \'d\' in \'dog\'.</string>
    <string name="note_epsilon">Short \'e\' sound, as in \'pet\'.</string>
    <string name="note_zeta">Pronounced \'ds\' in \'ads\', or sometimes \'z\' in \'zebra\'.</string>
    <string name="note_eta">Long \'e\' sound, like \'a\' in \'late\' without the \'y\' glide.</string>
    <string name="note_theta">Aspirated \'t\', pronounced as \'th\' in \'think\'.</string>
    <string name="note_iota">Pronounced as \'i\' in \'machine\'.\nCan be short (as in \'bit\') or long (as in \'machine\').</string>
    <string name="note_kappa">Pronounced as \'k\' in \'king\'.</string>
    <string name="note_lambda">Pronounced as \'l\' in \'lamp\'.</string>
    <string name="note_mu">Pronounced as \'m\' in \'man\'.</string>
    <string name="note_nu">Pronounced as \'n\' in \'night\'.</string>
    <string name="note_xi">Pronounced as \'ks\' as in \'box\'.</string>
    <string name="note_omicron">Short \'o\' sound, as in \'lot\'.</string>
    <string name="note_pi">Pronounced as \'p\' in \'pen\'.</string>
    <string name="note_rho">Rolled \'r\' sound, similar to Spanish. Always takes a rough breathing mark at the start of a word.</string>
    <string name="note_sigma">Uses different forms: σ within words, ς at the end of words.</string>
    <string name="note_final_sigma">Used only at the end of words.</string>
    <string name="note_tau">Pronounced as \'t\' in \'top\'.</string>
    <string name="note_upsilon">Pronounced like French \'u\' or German \'ü\'.</string>
    <string name="note_phi">Aspirated \'p\', pronounced as \'ph\' (or \'f\') in \'phone\'.</string>
    <string name="note_chi">Aspirated \'k\', pronounced like \'ch\' in Scottish \'loch\' or German \'Bach\'.</string>
    <string name="note_psi">Pronounced as \'ps\' in \'lapse\'.</string>
    <string name="note_omega">Long \'o\' sound, like \'aw\' in \'saw\', held longer than omicron.</string>

    <!-- Diphthong Notes -->
    <string name="note_diphthong_ai">Pronounced like \'ai\' in \'aisle\'.</string>
    <string name="note_diphthong_ei">Pronounced like \'ay\' in \'pay\'.</string>
    <string name="note_diphthong_oi">Pronounced like \'oi\' in \'coin\'.</string>
    <string name="note_diphthong_ui">Rare diphthong, pronounced as \'wee\' in \'week\'.</string>
    <string name="note_diphthong_au">Pronounced like \'ow\' in \'cow\'.</string>
    <string name="note_diphthong_eu">Pronounced as a blend of \'e\' and \'u\', like \'eh-oo\'.</string>
    <string name="note_diphthong_hu">Rare diphthong, typically pronounced as \'hyoo\'.</string>
    <string name="note_diphthong_ou">Always pronounced like \'oo\' in \'food\'.</string>

    <!-- Improper Diphthong Notes -->
    <string name="note_improper_diphthong_ai">Formed with alpha and iota subscript. Pronounced like alpha.</string>
    <string name="note_improper_diphthong_ei">Formed with eta and iota subscript. Pronounced like eta.</string>
    <string name="note_improper_diphthong_oi">Formed with omega and iota subscript. Pronounced like omega.</string>

    <!-- Breathing Mark Notes -->
    <string name="note_breathing_rough">Adds an \'h\' sound before vowels and rho.</string>
    <string name="note_breathing_smooth">Does not affect pronunciation; used for orthographic purposes.</string>
